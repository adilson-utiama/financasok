<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/item_despesa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/AppTheme">

        <TextView
            android:id="@+id/despesa_categoria"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_tab_despesa"
            android:text="Categoria"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/despesa_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="10/10/2018"
            app:layout_constraintBottom_toBottomOf="@+id/despesa_categoria"
            app:layout_constraintEnd_toStartOf="@+id/icon_pag"
            app:layout_constraintStart_toEndOf="@+id/despesa_categoria"
            app:layout_constraintTop_toTopOf="@+id/despesa_categoria" />

        <TextView
            android:id="@+id/despesa_descricao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Descricao"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/despesa_valor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/despesa_categoria" />

        <TextView
            android:id="@+id/despesa_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            android:text="R$ 1,00"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/despesa_descricao"
            app:layout_constraintEnd_toStartOf="@+id/icon_pag"
            app:layout_constraintTop_toTopOf="@+id/despesa_descricao" />

        <ImageView
            android:id="@+id/icon_pag"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:alpha="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_pagamento_outros" />

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>